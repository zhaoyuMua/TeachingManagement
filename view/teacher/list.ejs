<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>教学后台</title>
    <!-- css -->
    <%- include('../layout/Style') %>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../layout/Navbar') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../layout/Asidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%- include('../layout/PageHeader', {main: '讲师管理', sub: '讲师列表'})
        %>
        <!-- /.content-header -->
        <!-- Main content -->
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <table id="list" class="table table-striped table-bordered">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col" style="width: 60px">序号</th>
                    <th scope="col">照片</th>
                    <th scope="col">姓名</th>
                    <th scope="col">年龄</th>
                    <th scope="col">性别</th>
                    <th scope="col">教龄</th>
                    <th scope="col" style="width: 126px">操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% teachers.forEach(function(teacher, index){ %>
                  <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td>
                      <img width="64" height="64" src=<%= teacher.avatar %>
                      alt="头像" />
                    </td>
                    <td><%= teacher.name %></td>
                    <td><%= teacher.age %></td>
                    <td><%= teacher.sex ? '男' : '女' %></td>
                    <td><%= teacher.teachAge %> 年</td>
                    <td>
                      <a href="/teacher/edit?_id=<%=teacher._id%>" class="btn btn-primary btn-sm"
                        >编辑</a
                      >
                      <button id=<%= teacher._id %> type="button" class="btn btn-danger btn-sm del">
                        删除
                      </button>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Main Footer -->
      <%- include('../layout/Footer') %>
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->
    <%- include('../layout/Script') %>
    <script src="/dist/js/teacher/list.js"></script>
  </body>
</html>
