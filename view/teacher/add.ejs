<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>教学后台</title>
    <!-- css -->
    <%- include('../layout/Style') %>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <%- include('../layout/Navbar') %>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <%- include('../layout/Asidebar') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%- include('../layout/PageHeader', {main: '讲师管理', sub: '讲师添加'})
        %>
        <!-- /.content-header -->
        <!-- Main content -->
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <form style="width: 100%">
                <div class="card card-success">
                  <div class="card-header">
                    <h3 class="card-title">添加新的讲师</h3>
                  </div>
                  <div class="card-body">
                    <div class="form-group">
                      <label for="avatar">头像</label>
                      <input
                        type="file"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                      />
                      <p class="help-block">
                        <img
                          id="avatarPreview"
                          width="64"
                          height="64"
                          src="/dist/img/avatar.png"
                          alt="预览"
                        />
                      </p>
                    </div>
                    <input
                      class="form-control form-control-lg"
                      type="text"
                      placeholder="姓名"
                      name="name"
                      required
                    />
                    <br />
                    <input
                      class="form-control form-control-lg"
                      type="text"
                      placeholder="年龄"
                      name="age"
                    />
                    <br />
                    <select name="sex" class="form-control form-control-lg">
                      <option disabled value="-1">请选择</option>
                      <option value="1">男</option>
                      <option value="0">女</option>
                    </select>
                    <br />
                    <input
                      class="form-control form-control-lg"
                      type="text"
                      name="teachAge"
                      placeholder="教龄（年）"
                    />
                  </div>
                  <!-- /.card-body -->
                  <button type="submit" class="btn btn-success">
                    添加
                  </button>
                </div>
              </form>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Main Footer -->
      <%- include('../layout/Footer') %>
    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->
    <%- include('../layout/Script') %>
    <script src="/dist/js/teacher/add.js"></script>
  </body>
</html>
